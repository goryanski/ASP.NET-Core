@model GetTravelApplication.Models.User.LoginViewModel

<div class="text-center login-container">
    <h2 class="text-center">Login to the application</h2>
    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe"/>
        </div>
        <div>
            <input type="submit" class="btn btn-blue-color" value="Login" />
        </div>
    </form>
</div>
    